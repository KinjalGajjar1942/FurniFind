
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isCarpenter() {
      return request.auth.token.role == 'carpenter';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Public read for categories
    match /categories/{category} {
      allow read: if true;
    }

    // Rules for the users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      // Allow a user to create their own user document upon signup.
      allow create: if isOwner(userId) && request.auth != null;
    }

    // Public read for furniture
    match /furniture/{furnitureId} {
      allow read: if true;
      allow create, update, delete: if isCarpenter();
    }
  }
}
