
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to all documents.
    // This is suitable for a single-user admin app but would need to be
    // secured with authentication rules for a multi-user app.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
