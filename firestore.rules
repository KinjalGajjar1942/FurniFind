
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /categories/{category} {
      allow read: if true;
    }

    match /furniture/{furnitureId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.name is string && request.resource.data.description is string && request.resource.data.category is string && request.resource.data.images is list && request.resource.data.images.size() <= 10;
      allow update: if request.auth != null && request.resource.data.name is string && request.resource.data.description is string && request.resource.data.category is string && request.resource.data.images is list && request.resource.data.images.size() <= 10;
    }
  }
}
