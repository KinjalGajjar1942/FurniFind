
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to write to the 'furniture-images' directory
    match /furniture-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
